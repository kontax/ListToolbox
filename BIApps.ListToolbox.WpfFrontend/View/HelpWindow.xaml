                                HorizontalAlignment="Right"
                                Height="30"
                                Width="100"
                                Margin="10"
                                IsEnabled="{Binding ElementName=tbxEmailContent,Path=Text.Length}" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
